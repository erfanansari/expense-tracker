{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@types": ["./src/@types/index.ts"],
      "@schemas": ["./src/@schemas/index.ts"],
      "@actions/*": ["./src/actions/*"],
      "@components/*": ["./src/components/*"],
      "@configs": ["./src/configs/index.ts"],
      "@configs/*": ["./src/configs/*"],
      "@constants": ["./src/constants/index.ts"],
      "@constants/*": ["./src/constants/*"],
      "@core/*": ["./src/core/*"],
      "@features/*": ["./src/features/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@storages/*": ["./src/storages/*"],
      "@stores/*": ["./src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils": ["./src/utils/index.ts"],
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
